<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalogsearch.product.addto" remove="true"/>
        <referenceBlock name="breadcrumbs" remove="true"/>
        <!-- Add banner slide -->
        <referenceContainer name="page.wrapper">
            <container name="page.banner.slide" label="CMS Banner Slider" htmlTag="div" htmlClass="cms-top-banner" after="header_container">
                <block class="Magento\Cms\Block\Block" name="cms_banner_slider">
                    <arguments>
                        <argument name="block_id" xsi:type="string">cms_banner_slider</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
