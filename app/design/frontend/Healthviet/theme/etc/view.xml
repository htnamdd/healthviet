<?xml version="1.0"?>

<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="cart_cross_sell_products" type="small_image">
                <width>400</width>
                <height>300</height>
            </image>
            <image id="cart_page_product_thumbnail" type="small_image">
                <width>90</width>
                <height>90</height>
            </image>
            <image id="category_page_grid" type="small_image">
                <width>400</width>
                <height>300</height>
            </image>
            <image id="new_products_content_widget_grid" type="small_image">
                <width>400</width>
                <height>300</height>
            </image>

            <image id="product_page_main_image" type="image">
                <width>800</width>
                <height>600</height>
            </image>
            <image id="product_page_main_image_default" type="image">
                <width>800</width>
                <height>600</height>
            </image>
            <image id="product_page_image_medium" type="image">
                <width>800</width>
                <height>600</height>
            </image>
            <image id="recently_viewed_products_grid_content_widget" type="small_image">
                <width>400</width>
                <height>300</height>
            </image>
            <image id="related_products_list" type="small_image">
                <width>400</width>
                <height>300</height>
            </image>

            <image id="upsell_products_list" type="small_image">
                <width>400</width>
                <height>300</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">

    <!-- Gallery and magnifier theme settings. Start -->
        <var name="gallery">
            <var name="nav">false</var>
        </var>
    </vars>
</view>
