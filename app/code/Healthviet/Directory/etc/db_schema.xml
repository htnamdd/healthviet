<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="directory_country_region" resource="default" engine="innodb" comment="Directory Country Region">
        <column xsi:type="varchar" name="1d_id" length="32" nullable="true" comment="1Digital ID"/>
    </table>
    <table name="directory_region_district" resource="default" engine="innodb" comment="Directory Region District">
        <column xsi:type="int" name="district_id" unsigned="true" nullable="false" identity="true"
                comment="District ID"/>
        <column xsi:type="int" name="region_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Region ID"/>
        <column xsi:type="varchar" name="default_name" nullable="true" length="255" comment="Region Name"/>
        <column xsi:type="varchar" name="1d_id" length="32" nullable="true" comment="1Digital ID"/>
        <constraint xsi:type="foreign" referenceId="DIR_REGION_DISTRICT_REGION_ID_DIR_COUNTRY_REGION_REGION_ID"
                    table="directory_region_district" column="region_id" referenceTable="directory_country_region"
                    referenceColumn="region_id" onDelete="CASCADE"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="district_id"/>
        </constraint>
        <index referenceId="DIRECTORY_REGION_DISTRICT_DEFAULT_NAME" indexType="btree">
            <column name="default_name"/>
        </index>
    </table>
    <table name="directory_district_ward" resource="default" engine="innodb" comment="Directory District Ward">
        <column xsi:type="int" name="ward_id" unsigned="true" nullable="false" identity="true"
                comment="Ward ID"/>
        <column xsi:type="int" name="district_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="District ID"/>
        <column xsi:type="varchar" name="default_name" nullable="true" length="255" comment="Region Name"/>
        <column xsi:type="varchar" name="1d_id" length="32" nullable="true" comment="1Digital ID"/>
        <constraint xsi:type="foreign" referenceId="DIR_DISTRICT_WARD_DISTRICT_ID_DIR_REGION_DISTRICT_DISTRICT_ID"
                    table="directory_district_ward" column="district_id" referenceTable="directory_region_district"
                    referenceColumn="district_id" onDelete="CASCADE"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="ward_id"/>
        </constraint>
        <index referenceId="DIRECTORY_DISTRICT_WARD_DEFAULT_NAME" indexType="btree">
            <column name="default_name"/>
        </index>
    </table>
</schema>
