<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Healthviet_SocialLogin::css/magnific-popup.css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Healthviet\SocialLogin\Block\Social" name="social_wrapper" template="wrapper/social.phtml">
                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Facebook" name="healthviet_facebook_login_button"
                       template="socialnetwork/facebook.phtml" cacheable="false">
                </block>
                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Google" name="healthviet_google_login_button"
                       template="socialnetwork/google.phtml" cacheable="false">
                </block>

                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Amazon" name="healthviet_amazon_login_button"
                       template="socialnetwork/amazon.phtml" cacheable="false">
                </block>


                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Twitter" name="healthviet_twitter_login_button"
                       template="socialnetwork/twitter.phtml" cacheable="false">
                </block>
                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Instagram" name="healthviet_instagram_login_button"
                       template="socialnetwork/instagram.phtml" cacheable="false">
                </block>
                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Linkedin" name="healthviet_linkedin_login_button"
                       template="socialnetwork/linkedin.phtml" cacheable="false">
                </block>
                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Pinterest" name="healthviet_pinterest_login_button"
                       template="socialnetwork/pinterest.phtml" cacheable="false">
                </block>
                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Reddit" name="healthviet_reddit_login_button"
                       template="socialnetwork/reddit.phtml" cacheable="false">
                </block>
                <block class="Healthviet\SocialLogin\Block\SocialNetwork\Line" name="healthviet_line_login_button"
                       template="socialnetwork/line.phtml" cacheable="false">
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
