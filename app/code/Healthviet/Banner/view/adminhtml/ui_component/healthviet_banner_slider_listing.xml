<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">healthviet_banner_slider_listing.healthviet_banner_slider_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>healthviet_banner_slider_columns</spinner>
		<deps>
			<dep>healthviet_banner_slider_listing.healthviet_banner_slider_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add new Slider</label>
			</button>
		</buttons>
	</settings>
	<dataSource component="Magento_Ui/js/grid/provider" name="healthviet_banner_slider_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Healthviet_Banner::Slider</aclResource>
		<dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="healthviet_banner_slider_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>slider_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="healthviet_banner_slider_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">healthviet_banner_slider_listing.healthviet_banner_slider_listing.healthviet_banner_slider_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">slider_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" path="healthviet_banner/Slider/inlineEdit" xsi:type="url"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">healthviet_banner_slider_listing.healthviet_banner_slider_listing.healthviet_banner_slider_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>slider_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="slider_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="title">
			<settings>
				<filter>text</filter>
				<label translate="true">Title</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="show_title">
			<argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">Healthviet\Banner\Model\Banner\Attribute\Source\ConvertBoolean
				</item>
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">select</item>
					<item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
					<item name="sortable" xsi:type="boolean">true</item>
					<item name="dataType" xsi:type="string">select</item>
					<item name="sortOrder" xsi:type="number">40</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
					<item name="editor" xsi:type="string">select</item>
					<item name="label" xsi:type="string" translate="true">Show Title</item>
				</item>
			</argument>
		</column>
		<column name="enable">
			<argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">Healthviet\Banner\Model\Banner\Attribute\Source\ConvertBoolean
				</item>
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">select</item>
					<item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
					<item name="sortable" xsi:type="boolean">true</item>
					<item name="dataType" xsi:type="string">select</item>
					<item name="sortOrder" xsi:type="number">40</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
					<item name="editor" xsi:type="string">select</item>
					<item name="label" xsi:type="string" translate="true">Enable</item>
				</item>
			</argument>
		</column>
		<column name="slider_code">
			<settings>
				<filter>text</filter>
				<label translate="true">Slider Code</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<actionsColumn class="Healthviet\Banner\Ui\Component\Listing\Column\SliderActions" name="actions">
			<settings>
				<indexField>slider_id</indexField>
				<resizeEnabled>false</resizeEnabled>
				<resizeDefaultWidth>107</resizeDefaultWidth>
			</settings>
		</actionsColumn>
	</columns>
</listing>
