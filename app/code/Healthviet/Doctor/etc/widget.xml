<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/widgets.xsd">
    <widget id="healthviet_doctor_list" class="Healthviet\Doctor\Block\Widget\DoctorList">
        <label>Doctors List</label>
        <description>List of doctors</description>
        <parameters>
            <parameter name="widget_status" xsi:type="select" visible="true" sort_order="1" source_model="Magento\Config\Model\Config\Source\Enabledisable">
                <label translate="true">Status</label>
                <description translate="true">Enable/Disable widget</description>
            </parameter>
            <parameter name="title" xsi:type="text" required="true">
                <label>Title</label>
            </parameter>
            <parameter name="show_pager" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Display Page Control</label>
            </parameter>
            <parameter name="doctors_per_page" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of Doctors per Page</label>
                <depends>
                    <parameter name="show_pager" value="1" />
                </depends>
                <value>3</value>
            </parameter>
            <parameter name="doctor_amount" xsi:type="text" visible="true">
                <label translate="true">Doctor amount</label>
                <description translate="true">Amount of doctors to display</description>
            </parameter>
        </parameters>
    </widget>
</widgets>
