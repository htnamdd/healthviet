<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Healthviet\Doctor\Block\Doctor\View" name="doctor.detail"
                   template="Healthviet_Doctor::doctor/view.phtml"/>

            <block class="Magento\Cms\Block\Block" name="doctor_related_product" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">doctor_related_product</argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="page.main.title" destination="main" before="-"/>
        <!-- Add banner slide -->
        <referenceContainer name="page.wrapper">
            <container name="page.banner.slide" label="CMS Banner Slider" htmlTag="div" htmlClass="cms-top-banner"
                       after="header_container">
                <block class="Magento\Cms\Block\Block" name="cms_banner_slider">
                    <arguments>
                        <argument name="block_id" xsi:type="string">cms_banner_slider</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
