<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Healthviet_Blog::config_blog" title="Config Blog" sortOrder="20"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Healthviet_Blog::top_level" title="Blog Base">
                    <resource id="Healthviet_Blog::category" title="Category" sortOrder="100">
                        <resource id="Healthviet_Blog::category_save" title="Save Category" sortOrder="100"/>
                        <resource id="Healthviet_Blog::category_delete" title="Delete Category" sortOrder="200"/>
                    </resource>
                    <resource id="Healthviet_Blog::post" title="Posts" sortOrder="200">
                        <resource id="Healthviet_Blog::post_save" title="Save Post" sortOrder="100"/>
                        <resource id="Healthviet_Blog::post_delete" title="Delete Post" sortOrder="200"/>
                    </resource>
                    <resource id="Healthviet_Blog::comment" title="Comments" sortOrder="300">
                        <resource id="Healthviet_Blog::comment_save" title="Save Comment" sortOrder="100"/>
                        <resource id="Healthviet_Blog::comment_delete" title="Delete Comment" sortOrder="200"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
